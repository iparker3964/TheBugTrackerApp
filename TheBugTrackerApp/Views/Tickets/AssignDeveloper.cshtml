@model TheBugTrackerApp.Models.ViewModels.AssignDeveloperViewModel

<div class="container">
    <h2>Assign Developers for</h2>
    <h3>@Model.Ticket.Title</h3>
    <div class="row">
        <div class="col-md-6">
            <a style="font:small" asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Ticket.ProjectId">@Model.Ticket.Project.Name</a>

            <div class="card">
                <div class="card-header">
                    <label class="control-label">Assign Developer</label>
                </div>
                <div class="card-body">
                    <form asp-action="AssignDeveloper" asp-controller="Tickets" method="post">
                        <input asp-for="Ticket.Id" type="hidden" />
                        <p>Description: @Model.Ticket.Description</p>

                        <div class="form-group">
                            <label class="col-form-label">Select Developers</label>
                            <select required asp-for="DeveloperId" asp-items="@Model.Developers" class="form-control">
                                <option></option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Assign" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="UnassignedTickets" asp-controller="Tickets">Unassigned Tickets</a>
    </div>
</div>